<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EntraBridge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Remove previous display rules */
        /* New styles will be defined in CSS file */
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Removed toggle button from header -->
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar sidebar-expanded">
                <div class="position-sticky pt-3 d-flex flex-column">
                    <ul class="nav flex-column flex-grow-1">
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/Index" ? " fw-bold" : ""))" aria-current="page" asp-area="" asp-page="/Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/AddApplication" ? " fw-bold" : ""))" asp-area="" asp-page="/AddApplication">
                                Add new Application
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/ListApplications" ? " fw-bold" : ""))" asp-area="" asp-page="/ListApplications">
                                List Applications
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/EditApplication" ? " fw-bold" : ""))" asp-area="" asp-page="/EditApplication">
                                Edit Application
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/DeleteApplication" ? " fw-bold" : ""))" asp-area="" asp-page="/DeleteApplication">
                                Delete Application
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/ApproveRequest" ? " fw-bold" : ""))" asp-area="" asp-page="/ApproveRequest">
                                Approve Request
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/CheckStatusApproval" ? " fw-bold" : ""))" asp-area="" asp-page="/CheckStatusApproval">
                                Check Status Approval
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/ManagePermissions" ? " fw-bold" : ""))" asp-area="" asp-page="/ManagePermissions">
                                Manage Permissions
                            </a>
                        </li>
                        <!-- Basic navigation -->
                        <li class="nav-item">
                            <a class="@("nav-link" + (ViewContext.RouteData.Values["page"]?.ToString() == "/Privacy" ? " fw-bold" : ""))" asp-area="" asp-page="/Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="pb-3">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <footer class="border-bottom footer text-muted">
        <div class="container">
            &copy; 2025 - EntraBridge - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>